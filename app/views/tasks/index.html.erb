<h1 class="mb-4">Tasks List</h1>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= link_to task.title, task_path(task) %>
      <%= task.completed ? "[Completed]" : "[Pending]" %>
      <%= link_to 'Edit', edit_task_path(task), class: 'btn btn-primary btn-sm' %>
      <%= link_to 'Delete', task_path(task), data: { turbo_confirm: 'Are you sure you want to delete this task?' }, turbo_method: :delete, class: 'btn btn-danger btn-sm' %>
    </li>
  <% end %>
</ul>

<%= link_to 'New Task', new_task_path, class: 'btn btn-success' %>
