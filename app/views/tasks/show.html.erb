<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<p><%= @task.completed ? "This task is completed" : "This task is pending" %></p>

<%= link_to 'Back to tasks list', tasks_path %>
<%= link_to 'Edit', edit_task_path(@task) %> |
<%= link_to 'Delete', task_path(@task), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
